generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  image String
  video String
  price Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categoryId Int
  category   category @relation(fields: [categoryId], references: [id])
}

model category {
  id          Int      @id @default(autoincrement())
  name        String
  products    products[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
